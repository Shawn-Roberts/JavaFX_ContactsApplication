<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="com.Shawn.ContactsApp.ModifyDataController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Please fill out the form below and select "OK" to continue
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10" >
            <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="firstNameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
            <Label text="Last Name" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextField   fx:id="lastNameTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField >
            <Label text="Phone Number" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <TextField  fx:id="phoneNumberTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"></TextField >
            <Label text="Notes" GridPane.rowIndex="3" GridPane.columnIndex="0"></Label>
            <TextArea  fx:id="notesTextArea" GridPane.rowIndex="3" GridPane.columnIndex="1" wrapText="true"></TextArea >
        </GridPane>
    </content>
</DialogPane>